<% include ../layout/header%>
<% include ../layout/menu%>

<div class="container">
    <h3>Cadastro Produto</h3>
    <div class="panel panel-default" style="height:600px; background: #ddddddcc">
        <div id="listagemProdutos">
            <h1>Listagem de produtos</h1>

            <table width='80%'>

                    <tr style='text-align:left; background-color:#CCC'>
                        <th>id</th>
                        <th>Nome</th>
                        <th>Preco</th>
                    </tr>
                    
                    <!--
                        Using FOREACH LOOP for the users array
                        
                        myArray.forEach(function(el, index) {
                            // el - current element, i - index
                        });
                    -->
                    <% if (data) { %>
                    <% data.forEach(function(produto){ %>
                        <tr>
                            <td><%= produto.id %></td>
                            <td><%= produto.nome %></td>
                            <td><%= produto.preco %></td>
                        </tr>
                    <% }) %>
                    <% } %>
                
                </table>
                <a href="/produto"><button type="button" class="btn btn-primary">Voltar</button></a>
        </div>
    </div>
    <% include ../layout/footer%>